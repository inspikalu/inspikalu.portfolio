---
import RightTriangle from "./RightTriangle.astro";
import { LuGithub } from "react-icons/lu";
import { FaXTwitter } from "react-icons/fa6";
import { FaLinkedinIn } from "react-icons/fa";
import { MdEmail } from "react-icons/md";
import { FaPhoneAlt } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";

const githubUrl = "https://github.com/inspikalu";
const linkedInUrl = "https://ng.linkedin.com/in/inspikalu";
const xUrl = "https://x.com/inspikalu";
const email = "inspikalu@gmail.com"; // Replace with your actual email
const phone = "+234 9011 871 245"; // Replace with your actual phone number
const location = "Imo, Nigeria"; // Replace with your actual location
const iconSize = 20;
---

<section id="contact" class="bg-card-background py-16">
  <section class="mx-auto w-[90%] text-text">
    <div class="flex flex-col gap-3 mb-8">
      <h2 class="text-primary font-extrabold flex items-center gap-2">
        <RightTriangle fill="#d72638" size="13" /> Get in touch
      </h2>
      <h1 class="text-3xl font-bold">Contact Me</h1>
      <p class="max-w-2xl">
        Feel free to reach out if you're looking for a developer, have a
        question, or just want to connect.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="bg-background p-6 rounded-lg shadow-md">
        <form
          class="flex flex-col gap-4"
          action="https://formspree.io/f/mwplkgee"
          method="POST"
        >
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="flex flex-col gap-2">
              <label for="name" class="text-sm font-medium">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                placeholder="Your name"
                class="p-3 rounded bg-card-background border border-primary/30 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary"
              />
            </div>
            <div class="flex flex-col gap-2">
              <label for="email" class="text-sm font-medium">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="Your email"
                class="p-3 rounded bg-card-background border border-primary/30 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary"
              />
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label for="subject" class="text-sm font-medium">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              placeholder="Subject"
              class="p-3 rounded bg-card-background border border-primary/30 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary"
            />
          </div>
          <div class="flex flex-col gap-2">
            <label for="message" class="text-sm font-medium">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              placeholder="Your message"
              class="p-3 rounded bg-card-background border border-primary/30 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary resize-none"
            ></textarea>
          </div>
          <button
            type="submit"
            class="bg-primary p-3 rounded-md cursor-pointer focus:ring-2 focus:ring-offset-2 focus:ring-primary text-button-text font-medium transition-colors hover:bg-primary/90 mt-2"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="flex flex-col gap-6">
        <div class="bg-background p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-4">Contact Information</h3>
          <div class="flex flex-col gap-4">
            <div class="flex items-center gap-3">
              <div class="bg-primary/10 p-2 rounded-full">
                <MdEmail size={iconSize} className="text-primary" />
              </div>
              <div>
                <p class="text-sm text-text/70">Email</p>
                <a
                  href={`mailto:${email}`}
                  class="hover:text-primary transition-colors"
                >
                  {email}
                </a>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="bg-primary/10 p-2 rounded-full">
                <FaPhoneAlt size={iconSize} className="text-primary" />
              </div>
              <div>
                <p class="text-sm text-text/70">Phone</p>
                <a
                  href={`tel:${phone.replace(/\s+/g, "")}`}
                  class="hover:text-primary transition-colors"
                >
                  {phone}
                </a>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="bg-primary/10 p-2 rounded-full">
                <IoLocationSharp size={iconSize} className="text-primary" />
              </div>
              <div>
                <p class="text-sm text-text/70">Location</p>
                <p>{location}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-background p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-bold mb-4">Follow Me</h3>
          <div class="flex items-center gap-5">
            <a
              href={githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="GitHub Profile"
              class="bg-primary/10 p-3 rounded-full hover:bg-primary/20 transition-colors"
            >
              <LuGithub size={iconSize} />
            </a>
            <a
              href={xUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Twitter Profile"
              class="bg-primary/10 p-3 rounded-full hover:bg-primary/20 transition-colors"
            >
              <FaXTwitter size={iconSize} />
            </a>
            <a
              href={linkedInUrl}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn Profile"
              class="bg-primary/10 p-3 rounded-full hover:bg-primary/20 transition-colors"
            >
              <FaLinkedinIn size={iconSize} />
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
